{
  "name": "@knot/vscode-plugin",
  "displayName": "Knot Language",
  "description": "Knot language support.",
  "version": "1.0.0",
  "publisher": "effervescentia",
  "repository": "https://github.com/effervescentia/knot.git",
  "engines": {
    "vscode": "^1.30.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "knot",
      "aliases": ["Knot", "knot"],
      "extensions": [
        ".kn",
        ".knot"
      ],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "knot",
      "scopeName": "source.knot",
      "path": "./syntaxes/knot.tmLanguage"
    }]
  },
  "publishConfig": {
    "access": "public"
  }
}
