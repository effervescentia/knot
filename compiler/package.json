{
  "name": "tigris",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": ["Compiler.exe"]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["tigris.lib", "ounit"],
      "main": "TestSuite",
      "name": "TestSuite.exe"
    },
    "library": {
      "require": ["angstrom"],
      "name": "tigris.lib",
      "namespace": "Tigris"
    },
    "executable": {
      "require": ["tigris.lib"],
      "main": "Compiler",
      "name": "Compiler.exe"
    }
  },
  "scripts": {
    "dev": "sane 'esy build' ./library",
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestSuite.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/angstrom": "0.10.0",
    "@opam/dune": "*",
    "@opam/ounit": "2.0.8",
    "ocaml": "^4.4.0",
    "pesy": "*",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "sane": "^4.0.2"
  }
}