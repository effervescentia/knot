{
  "name": "knot",
  "description": "Compiler for the Knot programming language",
  "version": "0.0.0",
  "esy": {
    "build": "dune build -p knot",
    "buildDev": "pesy",
    "release": {
      "bin": [
        "knotc.exe"
      ],
      "rewritePrefix": true
    }
  },
  "buildDirs": {
    "library": {
      "require": [
        "opal",
        "dolog",
        "emoji"
      ],
      "name": "knot.lib",
      "namespace": "Knot"
    },
    "lexer": {
      "require": [
        "knot.lib"
      ],
      "name": "knot.lex",
      "namespace": "KnotLex"
    },
    "parser": {
      "require": [
        "knot.lib"
      ],
      "name": "knot.parse",
      "namespace": "KnotParse"
    },
    "resolver": {
      "require": [
        "knot.lib"
      ],
      "name": "knot.resolve",
      "namespace": "KnotResolve"
    },
    "analyzer": {
      "require": [
        "knot.lib",
        "knot.resolve"
      ],
      "name": "knot.analyze",
      "namespace": "KnotAnalyze"
    },
    "generator": {
      "require": [
        "knot.lib",
        "str"
      ],
      "name": "knot.generate",
      "namespace": "KnotGenerate"
    },
    "compiler": {
      "require": [
        "knot.lib",
        "knot.lex",
        "knot.parse",
        "knot.analyze"
      ],
      "name": "knot.compile",
      "namespace": "KnotCompile"
    },
    "executable": {
      "require": [
        "knot.lib",
        "knot.generate",
        "knot.compile",
        "unix",
        "core",
        "httpaf",
        "lwt",
        "lwt.unix",
        "faraday-lwt-unix",
        "uri"
      ],
      "main": "Main",
      "name": "knotc.exe",
      "rawBuildConfigFooter": [
        "(install",
        "  (section share_root)",
        "  (files",
        "    (definitions/jsx.kd as knot/definitions/jsx.kd)",
        "    (definitions/style.kd as knot/definitions/style.kd)",
        "  )",
        ")"
      ]
    },
    "test": {
      "require": [
        "knot.lib",
        "knot.lex",
        "knot.parse",
        "knot.analyze",
        "knot.generate",
        "oUnit",
        "ANSITerminal"
      ],
      "main": "TestSuite",
      "name": "TestSuite.exe"
    }
  },
  "scripts": {
    "build_test": "esy build && esy test",
    "dev": "sane 'esy build' --glob='(library|lexer|parser|analyzer|resolver|generator|compiler|executable)/**/*.re'",
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "server:simple": "esy x knotc.exe -server -config ./test/resources/simple_project",
    "test": "npm run test:unit && npm run test:e2e:simple",
    "test:unit": "esy x TestSuite.exe",
    "test:e2e": "esy x knotc.exe ./test/resources/project/src/index.kn 1> /dev/null",
    "test:e2e:debug": "esy x knotc.exe -debug ./test/resources/project/src/index.kn",
    "test:e2e:simple": "esy x knotc.exe ./test/resources/simple_project/src/index.kn 1> /dev/null",
    "test:e2e:simple:debug": "esy x knotc.exe -debug ./test/resources/simple_project/src/index.kn",
    "tdd": "sane 'esy build && npm run test' --glob='(library|lexer|parser|resolver|analyzer|generator|compiler|executable|test)/**/*.re'"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/ANSITerminal": "0.8.1",
    "@opam/core": "v0.12.3",
    "@opam/dolog": "3.0",
    "@opam/dune": ">=1.6.0",
    "@opam/emoji": "1.1.0",
    "@opam/faraday-lwt-unix": "0.7.0",
    "@opam/httpaf": "0.6.0",
    "@opam/lwt": "4.3.0",
    "@opam/opal": "0.1.1",
    "@opam/ounit": "2.0.8",
    "@opam/uri": "3.0.0",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "4.7.1004",
    "pesy": "*",
    "refmterr": "*"
  }
}
