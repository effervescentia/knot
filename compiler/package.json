{
  "name": "knot",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": ["Compiler.exe"]
    }
  },
  "buildDirs": {
    "library": {
      "require": ["opal"],
      "name": "knot.lib",
      "namespace": "Knot"
    },
    "lexer": {
      "require": ["knot.lib", "opal"],
      "name": "knot.lex",
      "namespace": "KnotLex"
    },
    "parser": {
      "require": ["knot.lib", "knot.lex", "opal"],
      "name": "knot.parse",
      "namespace": "KnotParse"
    },
    "executable": {
      "require": ["knot.lib", "knot.lex", "knot.parse"],
      "main": "Compiler",
      "name": "Compiler.exe"
    },
    "test": {
      "require": [
        "knot.lib", "knot.lex", "knot.parse", "ounit", "ansiterminal"
      ],
      "main": "TestSuite",
      "name": "TestSuite.exe"
    }
  },
  "scripts": {
    "build_test": "esy build && esy test",
    "dev": "sane 'esy build' --glob='(library|parser|lexer)/**/*.re'",
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestSuite.exe",
    "tdd": "sane 'esy build && esy test' --glob='(library|parser|lexer|test)/**/*.re'"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/ANSITerminal": "0.8.1",
    "@opam/angstrom": "0.10.0",
    "@opam/dune": "*",
    "@opam/opal": "0.1.1",
    "@opam/ounit": "2.0.8",
    "ocaml": "^4.4.0",
    "pesy": "*",
    "refmterr": "*",
    "sane": "^4.0.2"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}