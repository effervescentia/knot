{
  "extends": "./tsconfig.main.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./packages",
    "paths": {
      "@knot/compiler": [
        "binaries/compiler/src"
      ],
      "@knot/common": [
        "plugins/common/src"
      ],
      "@knot/browserify-plugin": [
        "plugins/bundler/browserify/src"
      ],
      "@knot/rollup-plugin": [
        "plugins/bundler/rollup/src"
      ],
      "@knot/webpack-plugin": [
        "plugins/bundler/webpack/src"
      ],
      "@knot/browser-plugin": [
        "plugins/compiler/browser/src"
      ],
      "@knot/jss-plugin": [
        "plugins/compiler/jss/src"
      ],
      "@knot/react-plugin": [
        "plugins/compiler/react/src"
      ],
      "@knot/vue-plugin": [
        "plugins/compiler/vue/src"
      ],
      "@knot/plugin-utils": [
        "plugins/compiler/utils/src"
      ],
      "@knot/*": [
        "plugins/*/src"
      ]
    }
  },
  "compileOnSave": false,
}
