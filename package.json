{
  "name": "knot",
  "private": true,
  "description": "Knot Language Tools",
  "main": "index.js",
  "repository": "https://github.com/effervescentia/knot.git",
  "author": "Ben Teichman <ben.l.teichman@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "packages/**"
  ],
  "scripts": {
    "release": "lerna exec --concurrency 1 -- 'npx --no-install semantic-release -e semantic-release-monorepo'",
    "release:pre": "lerna-semantic-release pre",
    "release:perform": "lerna-semantic-release perform",
    "release:post": "lerna-semantic-release post"
  },
  "lint-staged": {
    "compiler/{library,lexer,parser,resolver,analyzer,generator,compiler,executable,test}/**/*.re": [
      "refmt --in-place",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/execa": "^0.9.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/loader-utils": "^1.1.3",
    "@types/node": "^11.11.0",
    "@types/node-fetch": "^2.1.6",
    "@types/webpack": "^4.4.26",
    "ava": "1.0.0-beta.7",
    "browser-env": "^3.2.6",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "cypress": "^3.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "cz-lerna-changelog": "^2.0.2",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "lerna-semantic-release": "^9.1.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "opn-cli": "^4.0.0",
    "prettier": "^1.15.2",
    "semantic-release": "15.10.6",
    "semantic-release-monorepo": "6.1.1",
    "semantic-release-monorepo-hooks": "^2.9.1",
    "semantic-release-plugin-decorators": "^2.0.0",
    "standard-version": "^4.4.0",
    "start-server-and-test": "^1.7.11",
    "trash-cli": "^1.4.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  }
}
